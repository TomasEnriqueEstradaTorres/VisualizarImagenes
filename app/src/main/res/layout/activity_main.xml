<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/claro"
    tools:context=".MainActivity">


    <ImageView
        android:id="@+id/imageViewOpcion1"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginStart="60dp"
        android:layout_marginEnd="53dp"
        android:contentDescription="@string/todo"
        android:src="@drawable/aventurero"
        app:layout_constraintBottom_toBottomOf="@+id/imageViewOpcion2"
        app:layout_constraintEnd_toStartOf="@+id/imageViewOpcion2"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/imageViewOpcion2" />

    <ImageView
        android:id="@+id/imageViewOpcion2"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginEnd="58dp"
        android:layout_marginBottom="45dp"
        android:contentDescription="@string/todo"
        android:src="@drawable/sombiea"
        app:layout_constraintBottom_toTopOf="@+id/imageViewOpcion4"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/imageViewOpcion1"
        app:layout_constraintTop_toBottomOf="@+id/textViewDetalle" />


    <ImageView
        android:id="@+id/imageViewOpcion3"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginStart="60dp"
        android:layout_marginEnd="53dp"
        android:contentDescription="@string/todo"
        android:src="@drawable/sombiea"
        app:layout_constraintBottom_toBottomOf="@+id/imageViewOpcion4"
        app:layout_constraintEnd_toStartOf="@+id/imageViewOpcion4"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/imageViewOpcion4" />


    <ImageView
        android:id="@+id/imageViewOpcion4"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginEnd="58dp"
        android:layout_marginBottom="26dp"
        android:contentDescription="@string/todo"
        android:src="@drawable/sombieb"
        app:layout_constraintBottom_toTopOf="@+id/textViewMensaje"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/imageViewOpcion3"
        app:layout_constraintTop_toBottomOf="@+id/imageViewOpcion2" />


    <ImageView
        android:id="@+id/imageViewReloj"
        android:layout_width="100dp"
        android:layout_height="0dp"
        android:layout_marginBottom="17dp"
        android:contentDescription="@string/todo"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textViewMensaje"
        app:srcCompat="@drawable/reloj" />

    <TextView
        android:id="@+id/textViewTitulo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:layout_marginBottom="8dp"
        android:text="@string/adivida"
        android:textAlignment="center"
        android:textColor="@color/azul"
        android:textSize="25sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/textViewDetalle"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textViewMensaje"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/adivida"
        android:textAlignment="center"
        android:textColor="@color/negro"
        android:textSize="25sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/imageViewReloj"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageViewOpcion4" />

    <TextView
        android:id="@+id/textViewDetalle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="14dp"
        android:layout_marginBottom="29dp"
        android:text="@string/detalle"
        android:textAlignment="center"
        android:textColor="@color/azulClaro"
        android:textSize="25sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/imageViewOpcion2"
        app:layout_constraintStart_toStartOf="@+id/imageViewOpcion1"
        app:layout_constraintTop_toBottomOf="@+id/textViewTitulo" />


</android.support.constraint.ConstraintLayout>